<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela6">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="515dp"
        android:layout_height="526dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lufalufa" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="405dp"
        android:layout_height="247dp"
        android:gravity="center"
        android:text="A Lufa-Lufa casa é conhecida por valorizar características como lealdade, paciência, trabalho árduo e justiça. Seu animal símbolo é o texugo e suas cores são o amarelo e o preto. Os alunos da Lufa-Lufa são muitas vezes vistos como gentis, hospitaleiros e calorosos, e a casa valoriza a igualdade entre todos os bruxos e bruxas, independentemente de sua origem ou habilidades mágicas. A Lufa-Lufa tem uma forte conexão com a natureza e um senso de comunidade bastante desenvolvido, e seus membros muitas vezes se destacam em áreas como herbologia e cuidado com criaturas mágicas.    "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="189dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="Lufa-Lufa"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644" />
</androidx.constraintlayout.widget.ConstraintLayout>