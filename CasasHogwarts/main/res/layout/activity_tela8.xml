<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela6">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="480dp"
        android:layout_height="464dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/grifinoria" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="396dp"
        android:layout_height="231dp"
        android:gravity="center"
        android:text="Grifinória é uma casa conhecida por valorizar características como coragem, bravura, determinação e nobreza de espírito. Seu animal símbolo é o leão e suas cores são o vermelho e o dourado. Os alunos da Grifinória são frequentemente vistos como destemidos, altruístas e justos, e a casa tem uma longa tradição de produzir bruxos e bruxas notáveis, incluindo Harry Potter e seus amigos Hermione Granger e Ron Weasley. A Grifinória tem uma forte tradição de defender os valores da justiça e proteger os mais fracos, e seus membros muitas vezes se destacam em duelos, esportes mágicos e no combate às forças das trevas.    "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="189dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="Grifinória"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644" />
</androidx.constraintlayout.widget.ConstraintLayout>